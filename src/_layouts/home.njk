---
layout: base
---

<header class="hero" style="--spot-color: var(--color-primary)">
  <div class="gridwrap relative">
    <div class="welcome">
      <div class="wrapper region" style="--region-space-top: var(--space-3xl)">
        <h1 class="fade-in" style="--custom-size-step: var(--size-step-4)">
          {{ hero.title }}
        </h1>
      </div>
    </div>

    <div class="intro region" style="--region-space-top: var(--space-xl)">
      <div class="column">
        {{ hero.intro }}
      </div>
    </div>

    <div class="snapshot">
      {% image hero.image, "object-fit-cover", hero.alt, "eager" %} {% include
      'svg/arrow.svg' %}
      <div class="thisisme whimsical-hi">{{ hero.hi }}</div>
    </div>
  </div>
</header>

<article class="region" style="--region-space-top: var(--space-2xl)">
  <div class="wrapper flow prose">
    <h2>{{ about.title }}</h2>

    <div class="column flow prose">
      {{ content | safe }}
    </div>
  </div>
</article>

<article
  class="section"
  style="--button-color: var(--color-quaternary); --spot-color: var(--color-secondary)"
>
  {% include 'svg/divider-curve.svg' %}

  <div
    class="section__inner region"
    style="--region-space-bottom: 0; --region-space-top: 0"
  >
    <div
      class="wrapper flow sidebar overflow-hidden"
      style="--sidebar-align: flex-end; --sidebar-wrap: no-wrap"
    >
      {% include "svg/lene-startcta.svg" %}

      <section class="flow region" style="--region-space-bottom: var(--space-2xl)">
        <h2>{{ projects.title }}</h2>
        <p>{{ projects.teaser }}</p>

        <a href="{{ projects.goal }}" class="button button-retro">{{
          projects.button
        }}</a>
      </section>
    </div>
  </div>
</article>

<article class="wrapper region" style="--region-space-top: var(--space-2xl)">
  <div class="wrapper flow prose">
    <h2>{{ blog.title }}</h2>
    <p>{{ blog.intro }}</p>
  </div>
  {% include "partials/blog.njk" %}
</article>

{% include 'partials/cta.njk' %}
