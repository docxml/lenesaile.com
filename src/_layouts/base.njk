{% set assetHash = global.random() %}

<!DOCTYPE html>
<html lang="{{ locale }}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    {% include "partials/meta-info.njk" %}

    <!-- fonts preload -->
    <link
      rel="preload"
      href="/assets/fonts/outfit/outfit-v5-latin-700-webfont.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/assets/fonts/outfit/outfit-v5-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- load theme toggle first to avoid color flashing on page load.  -->
    <script src="/assets/theme-toggle.js"></script>

    <link rel="stylesheet" href="/assets/css/global.css?{{ assetHash }}" />

    <!-- defer js  -->
    <script type="module" src="/assets/app.js" defer></script>

    <!--  Add facility for pages to declare an array of stylesheet paths -->
    {% if pageStylesheets %} {% for item in pageStylesheets %}
    <link
      rel="stylesheet"
      media="print"
      href="{{ item }}?{{ assetHash }}"
      onload="this.media='all'"
    />
    {% endfor %} {% endif %}

    <script
      defer
      data-domain="lenesaile.com"
      src="https://plausible.io/js/plausible.js"
    ></script>

    <!-- include base schema  -->
    {% include "schemas/base-schema.njk" %}
  </head>

  <body
    class="relative"
    style="--nav-list-color: {{ navcolor or 'var(--color-text)' }}; --nav-list-bg: {{ navbg or 'var(--color-bg)' }}"
  >
    <!-- header -->
    {% include "partials/header.njk" %} {% include "partials/lang-switch.njk" %}

    <!-- content slot -->

    <main id="main" class="relative">{{ content | safe }}</main>

    <!-- footer -->
    {% include "partials/footer.njk" %}

    <!-- yt script if active-->
    {% if youtube %}
    <script
      type="module"
      src="https://cdn.jsdelivr.net/npm/@justinribeiro/lite-youtube@1.4.0/lite-youtube.min.js"
    ></script>
    {% endif %}
  </body>
</html>
