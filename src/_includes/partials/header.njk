<a href="#main" class="skip-link">{{ meta[page.lang].skipText }}</a>

<header class="wrapper | relative">
  <div class="absolute-menu">
    <div
      class="sidebar | ontop"
      style="--sidebar-target-width: 15rem; --sidebar-content-min-width: 63%"
    >
      <div class="logo">
        <button
          type="button"
          id="theme-toggle"
          class="theme-toggle"
          aria-label="auto"
          aria-live="polite"
        >
          {% include "icons/sun-moon.svg" %}
        </button>

        {% set activePage = page.url | url %}
        <!-- TODO: finda a less verbose solution here, also in footer -->
        <a
          href="/{{ page.lang }}/"
          class="no-underline"

          {% if activePage === '/en/' or activePage === '/de/' or activePage === '/es/' %}
        aria-current="page" {% endif %}

        >
          {{ meta[page.lang].siteName }}
        </a>
      </div>

      {% include "partials/menu.njk" %}
    </div>
  </div>
</header>
